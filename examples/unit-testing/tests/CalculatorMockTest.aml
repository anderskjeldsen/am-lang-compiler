namespace ExampleTests
{
    class CalculatorMockTest {
        import Am.Lang
        import Example

        test testWithMock() {
            mock Calculator {
                fun add(a: Int, b: Int): Int {
                    return 100
                }
            }
            
            var calculator = new Calculator()
            var result = calculator.add(5, 3)
            
            // With mock, should return 100 instead of 8
            if (result != 100) {
                throw new Exception("Expected 100 from mocked add, but got $result")
            }
            
            "Mock test passed - returned 100 as expected!".println()
        }

        test testWithoutMock() {
            var calculator = new Calculator()
            var result = calculator.add(5, 3)
            
            // Without mock, should return 8
            if (result != 8) {
                throw new Exception("Expected 8 from real add, but got $result")
            }
            
            "Non-mock test passed - returned 8 as expected!".println()
        }
    }
}
